extends layout

block content
    
    //MAIN
    #mainContainer
        img(src='../images/newbackground.png')


    // BANNER
    #cookbookBanner
        h1= title

    // Wrapper
    #wrapper

        // ADD RECIPE
        h2 Add recipe
        #addRecipe
            fieldset
                input#inputRecipeName(type='text', placeholder='Recipe name')
                br
                input#inputCookingTime(type='text', placeholder='Cooking time')
                br
                input#inputIngredients(type='text', placeholder='Ingredients')
                br
                input#inputMethod(type='text', placeholder='Method')
                br
                button#btnAddRecipe Add Recipe
        // /ADD RECIPEÂ§

        // DOCUMENT LIST
        h2 Recipe List
        #documentList
            table
                thead
                    th RecipeName
                    th CookingTime
                    th Delete?
                tbody
        // /DOCUMENTLIST

        // RECIPE DETAILS
        #recipeDetails.hidden
            h2 Recipe Details
            div#main-recipeDetails
                #container-recipeDetails
                    strong RecipeName:
                    |  <span id='recipeInfoName'></span>
                    br
                #container-recipeDetails
                    strong CookingTime:
                    |  <span id='recipeInfoCookingTime'></span>
                    br
                #container-recipeDetails
                    strong Ingredients:
                    |  <span id='recipeInfoIngredients'></span>
                    br
                #container-recipeDetails
                    strong Something:
                    |  <span id='recipeMethod'></span>
        // /RECIPE DETAILS
    
    // WRAPPER
